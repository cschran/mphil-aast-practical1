&GLOBAL
  PROJECT ICE-Ih
  PRINT_LEVEL LOW
  RUN_TYPE MD
&END GLOBAL

&MOTION
  &MD
    STEPS 20
    TIMESTEP [fs] 1
    ENSEMBLE NVT
    TEMPERATURE 250
    &THERMOSTAT
      TYPE CSVR
      &CSVR
        TIMECON [fs] 200
      &END CSVR
    &END THERMOSTAT
  &END MD
  &PRINT
    &TRAJECTORY
      &EACH
        MD 4
      &END EACH
    &END TRAJECTORY
    &VELOCITIES
      &EACH
        MD 4
      &END EACH
    &END VELOCITIES
    &FORCES
      &EACH
        MD 4
      &END EACH
    &END FORCES
    &RESTART OFF
    &END RESTART
    &RESTART_HISTORY OFF
    &END RESTART_HISTORY
  &END PRINT
&END MOTION

&FORCE_EVAL
  &DFT
    BASIS_SET_FILE_NAME GTH_BASIS_SETS
    BASIS_SET_FILE_NAME BASIS_MOLOPT
    POTENTIAL_FILE_NAME POTENTIAL
    &MGRID
      CUTOFF 450
      NGRIDS 5
    &END MGRID
    &SCF
      # needs a pre-converged wfn as input
      SCF_GUESS ATOMIC
      MAX_SCF 20
      EPS_SCF 2.0E-6
      &OT
        MINIMIZER DIIS
        PRECONDITIONER FULL_ALL
      &END OT
      &OUTER_SCF
        MAX_SCF 20
        EPS_SCF 2.0E-6
      &END OUTER_SCF
      &PRINT
        &RESTART
          ADD_LAST NUMERIC
          &EACH
            QS_SCF 0
          &END EACH
        &END RESTART
      &END PRINT
    &END SCF
    &QS
      EPS_DEFAULT 1.0E-12
      EPS_PGF_ORB 1.0E-14
    &END QS
    &XC # revPBE
      &XC_FUNCTIONAL
        &PBE
          PARAMETRIZATION REVPBE
        &END
      &END XC_FUNCTIONAL
      &XC_GRID
        #XC_DERIV SPLINE2
        XC_DERIV SPLINE2_SMOOTH
      &END XC_GRID
      &VDW_POTENTIAL
        POTENTIAL_TYPE PAIR_POTENTIAL
        &PAIR_POTENTIAL
          TYPE DFTD3
          R_CUTOFF 15
          LONG_RANGE_CORRECTION TRUE
          REFERENCE_FUNCTIONAL revPBE
          PARAMETER_FILE_NAME dftd3.dat
        &END PAIR_POTENTIAL
      &END VDW_POTENTIAL
    &END XC
  &END DFT
  &SUBSYS
    &TOPOLOGY
      CONN_FILE_FORMAT OFF
      COORD_FILE_NAME ice-Ih.pdb
      COORD_FILE_FORMAT PDB
    &END TOPOLOGY
    &CELL
      ABC 13.489   15.576   14.641
      PERIODIC XYZ
    &END CELL
    &KIND H
      MASS 2.0
      BASIS_SET DZVP-GTH-q1
      POTENTIAL GTH-PBE-q1
    &END KIND
    &KIND O
      BASIS_SET DZVP-GTH-q6
      POTENTIAL GTH-PBE-q6
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
